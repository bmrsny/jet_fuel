<div class="search">
		<%= text_field_tag :given_url %>
		<%= submit_tag "Filter", id: "filter-urls"%>
</div>
<%= link_to "Sort by views", links_path(sort: "popularity") %>
<%= link_to "Sort by created at", links_path(sort: "created_at") %><br/>
<div class="all-links col-xs-8">
	<table class="table">
		<thead>
			<tr>
				<th>Given Url</th>
				<th>Short Url</th>
				<th>Views</th>
				<th>Title</th>
			</tr>
		</head>
		<% @links.each do |link|%>
			<tbody>
				<tr>
					<th><%= truncate(link.given_url) %></th>
					<th><%= link_to  link.display_short_url, link_path(link.id) %></th>
					<th><%= link.clicks %></th>
					<th><%= link.title %></th>
				</tr>
			</body>
		<% end %>
	</table>
</div>
